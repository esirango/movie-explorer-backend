{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "allowJs": false
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
